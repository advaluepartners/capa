{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "NPM_FLAGS": "--legacy-peer-deps",
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NPM_FLAGS": "--legacy-peer-deps",
      "NODE_ENV": "production"
    }
  },
  "installCommand": "apt-get update && apt-get install -y build-essential python3 && npm install $NPM_FLAGS",
  "buildCommand": "npm run build"
}

  